<div class="results">
  <canvas id="myChart" width="400" height="400"></canvas>
  <h1><%= @survey.title %></h1>
  <div id="totals">
    
    <ul>
      <li>Total Survey Takers : <%= @participants %></li>
      <li>Total Completed : <%= @completed_count %></li>
    </ul>
  </div>


  <form>
    <% @survey.questions.each do |question| %>
    <h4><%= question.question %></h4>
    <ol id="<%=question.id%>" type="a">
      <%question.choices.each do |choice| %>
      
      <li id="<%=choice.id%>"  data-lable=<%= choice.choice %> data-values=<%= ((choice.num_responses.to_f / question.total_responses) * 100).round(2) %>></li>

        <%end%>
     </ol>
    <%end%>
  </form>

  <form action="/user/profile" method="get">
    <input class="button" type="submit" value="Back to Profile">
  </form>

  <% if @survey.responses.empty? %>
    <a href="/survey/<%= @survey.id %>/edit">Edit This Survey</a>
  <% end %> 
</div>




