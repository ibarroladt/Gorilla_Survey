
<h1><%= @survey.title %></h1>
<h3>Total Survey Takers : <%= @participants %></h3></h3>
<h3>Total Completed : <%= @completed_count %></h3></h3>
<% if current_user %>
  <h5><%= current_user.email %></h5>
<% end %>


<form class="results">
  <% @survey.questions.each do |question| %>
  <h4><%= question.question %></h4>
  <ol type="a">
    <%question.choices.each do |choice| %>
    <li><%= choice.choice %> (<%= ((choice.num_responses.to_f / question.total_responses) * 100).round(2) %>%)</li>
      <%end%>
   </ol>
  <%end%>
</form>

<form action="/user/profile" method="get">
  <input type="submit" value="Back to Profile">
</form>

<% if @survey.responses.empty? %>
  <a href="/survey/<%= @survey.id %>/edit">Edit This Survey</a>
<% end %> 
