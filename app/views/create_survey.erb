<div class="container">
  <h1><%= @survey.title %></h1>
  <h4><%= current_user.email %></h4>


  <form action="/survey/<%= @survey.id %>/question/create" method="post">
    <label>Question: <input type="text" name="question" required="required"></label>
    <input type="submit" value="Create Question">
  </form>
  
  <p>Surveys questions:</p>
  <table>
    <tr>
      <td>Question</td>
    </tr>
  <% @survey.questions.each do |question| %>
    <tr>
    <td><%= question.question %><td>
    </tr>
  <% end %>
  </table>
</div>
